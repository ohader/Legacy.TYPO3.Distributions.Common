<project name="TYPO3v4Build" basedir="." default="build">
	<property name="common.baseDir" value="" override="true" />
	<property name="common.taskPrefix" value="" override="true" />

	<property name="project.distributionsDirectory" value="${project.basedir}/Distributions/" />

	<import file="${project.basedir}/${common.baseDir}Build/common.xml" />
	<property name="common.isLoaded" value="true" override="true" />

	<import file="${project.distributionsDirectory}Base/Build/build.xml" />
	<import file="${project.distributionsDirectory}Blank/Build/build.xml" />
	<import file="${project.distributionsDirectory}Introduction/Build/build.xml" />

	<target name="build" depends="common,project-initialize">
		<if>
			<equals arg1="${common.type}" arg2="snapshot" />
			<then>
				<property name="build.versionName" value="${common.major}-snapshot-${common.date}" />
			</then>
			<else>
				<property name="build.versionName" value="${common.info.nextVersion}" />
			</else>
		</if>

		<phingcall target="base-execute">
			<property name="project.resourcesDirectory" value="${project.distributionsDirectory}Base/Resources/" override="true" />
		</phingcall>
		<phingcall target="blank-execute">
			<property name="project.resourcesDirectory" value="${project.distributionsDirectory}Blank/Resources/" override="true" />
		</phingcall>
		<phingcall target="introduction-execute">
			<property name="project.resourcesDirectory" value="${project.distributionsDirectory}Introduction/Resources/" override="true" />
		</phingcall>

		<phingcall target="project-md5" />

		<phingcall target="publish-sourceforge">
			<property name="publish-sourceforge.directory" value="TYPO3 ${build.versionName}" />
		</phingcall>
	</target>
</project>
